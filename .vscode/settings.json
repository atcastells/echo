{
  "eslint.useFlatConfig": true,
  "eslint.workingDirectories": [
    { "directory": "apps/backend", "changeProcessCWD": true },
    { "directory": "apps/frontend", "changeProcessCWD": true }
  ],
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
